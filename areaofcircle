import java.util.Scanner;
class circle
{
    int r;
    float area;
    float pie=3.14f;
    void display()
    {
        System.out.println("\n its ok!");
    }
}
class multiplication
{
    public static void main(String[] args)
    {
        circle a1=new circle();
        Scanner input=new Scanner(System.in);
        System.out.println("enter the r value: ");
        a1.r=input.nextInt();
        a1.area=a1.pie*a1.r*a1.r;
        System.out.println("area of the circle: "+a1.area);
        a1.display();
}
}
